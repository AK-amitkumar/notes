<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="#ebebeb"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:weightSum="1" >

            <EditText
                android:id="@+id/edtNoteQuickTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f8f8f8"
                android:fontFamily="@string/font_fontFamily_light"
                android:hint="Add quick note"
                android:inputType="text"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/imgShowQuickNote"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/oe_background_selector"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/ic_action_content_new"
                android:tint="@color/dark_icon"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgCreateQuickNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_action_notes"
                android:tint="@color/dark_icon" />

            <ImageView
                android:id="@+id/imgAttachImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_action_picture"
                android:tint="@color/dark_icon" />

            <ImageView
                android:id="@+id/imgAttachAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_action_audio"
                android:tint="@color/dark_icon" />

            <ImageView
                android:id="@+id/imgAttachSpeechToText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_action_speech_to_text"
                android:tint="@color/dark_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d2d2d2" />
    </LinearLayout>

</LinearLayout>