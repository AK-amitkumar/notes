<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.odoo.note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <odoo.controls.OForm
            android:id="@+id/odooFormNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="gone"
            odoo:model="note.note" >

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:customLayout="@layout/note_custom_tag_view"
                odoo:field_name="message_follower_ids"
                odoo:label_bottom_border_height="0"
                odoo:with_label="false" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="name"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="memo"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="stage_id"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="reminder"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_bottom_border_height="0"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />
        </odoo.controls.OForm>

        <com.odoo.util.controls.ExpandableHeightGridView
            android:id="@+id/noteAttachmentGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:verticalSpacing="5dp" />
    </LinearLayout>

</ScrollView>