<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingTop="?android:attr/actionBarSize" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <odoo.controls.OForm
            android:id="@+id/odooFormNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="gone"
            odoo:model="note.note" >

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:bottom_border_height="0"
                odoo:field_name="name"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:bottom_border_height="0"
                odoo:field_name="memo"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:bottom_border_height="0"
                odoo:field_name="stage_ids"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:bottom_border_height="0"
                odoo:field_name="reminder"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:label_color="@color/odoo_purple"
                odoo:label_textAppearance="?android:attr/textAppearanceSmall" />
        </odoo.controls.OForm>
    </LinearLayout>

</ScrollView>