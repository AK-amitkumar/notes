<odoo.controls.OForm xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    odoo:background_selector="@drawable/oe_listview_background_selector"
    odoo:model="note.note" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <odoo.controls.OField
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            odoo:fieldTextStyle="bold"
            odoo:field_name="name"
            odoo:field_textAppearance="?android:attr/textAppearanceLarge"
            odoo:textLines="1"
            odoo:with_label="false" />

        <ImageView
            android:id="@+id/imgOpen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/ic_action_accept"
            android:tint="@color/dark_icon" />
    </LinearLayout>

    <odoo.controls.OField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        odoo:field_name="memo"
        odoo:showAsText="false"
        odoo:textLines="3"
        odoo:with_label="false" >
    </odoo.controls.OField>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:customLayout="@layout/note_custom_view_follower"
            odoo:field_name="message_follower_ids"
            odoo:with_label="false" />
    </LinearLayout>

</odoo.controls.OForm>